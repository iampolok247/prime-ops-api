/* groovylint-disable-next-line CompileStatic */
pipeline {
    agent any

    // tools {
    //     nodejs 'NodeJS 18.x'  // MUST match the name from Global Tool Configuration
    // }

    environment {
        CI = 'true'
    }

    stages {
        stage('Install') {
            steps {
                sh 'echo hello world'
                sh 'node -v'
                sh 'npm install'
            }
        }

        stage('Deliver') {
            steps {
                sh 'chmod +x ./jenkins/scripts/deliver.sh'
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
