/* groovylint-disable-next-line CompileStatic */
pipeline {
    agent any

    options {
        skipStagesAfterUnstable()
    }
    
    tools {
        nodejs 'NodeJS 20.x'
    }


    environment {
        CI = 'true'
        BUILD_KEEP_CHILD_PROCESSES = 'true'
    }

    stages {
        stage('Install') {
            steps {
                sh 'echo hello world'
                sh 'node -v'
                sh 'npm install'
            }
        }

        stage('Deliver') {
            steps {
                sh 'chmod +x ./jenkins/scripts/deliver.sh'
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
